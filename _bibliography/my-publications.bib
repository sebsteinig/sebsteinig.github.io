	number = {6},
	urldate = {2023-07-14},
	journal = {Paleoceanography and Paleoclimatology},
	author = {Reichgelt, Tammo and Greenwood, David R. and Steinig, Sebastian and Conran, John G. and Hutchinson, David K. and Lunt, Daniel J. and Scriven, Leonie J. and Zhu, Jiang},
	month = jun,
